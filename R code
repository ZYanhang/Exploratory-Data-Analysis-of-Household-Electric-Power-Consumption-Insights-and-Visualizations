# Load the necessary packages
library(data.table)

# Read the data
data <- fread("household_power_consumption.txt", na.strings = "?", sep = ";")

# Subset the data for the dates 2007-02-01 and 2007-02-02
data_subset <- data[(Date == "1/2/2007" | Date == "2/2/2007")]

# Convert Date and Time columns to POSIXct
data_subset[, datetime := as.POSIXct(paste(Date, Time), format="%d/%m/%Y %H:%M:%S")]

# Plot 1: Histogram of Global Active Power
png("plot1.png", width=480, height=480)
hist(data_subset$Global_active_power, col="red", main="Global Active Power", 
     xlab="Global Active Power (kilowatts)", ylab="Frequency")
dev.off()




